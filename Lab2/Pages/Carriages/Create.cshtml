@page
@model Lab2.Pages.Carriages.CreateModel

@{
    ViewData["Title"] = "Создать вагон";
}

<h1>Создать</h1>

<h4>Вагон</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Carriage.TrainId"></label>
                <select asp-for="Carriage.TrainId" class="form-control"
                        asp-items="@(new SelectList(Model.Trains, "Id", "TrainNumber"))">
                    <option value="">Выберите поезд</option>
                </select>
                <span asp-validation-for="Carriage.TrainId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Carriage.Type"></label>
                <select asp-for="Carriage.Type" class="form-control">
                    <option value="">Выберите тип вагона</option>
                    <option value="Купе">Купе</option>
                    <option value="Плацкарт">Плацкарт</option>
                    <option value="Сидячий">Сидячий</option>
                </select>
                <span asp-validation-for="Carriage.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carriage.SeatCount" class="control-label"></label>
                <input asp-for="Carriage.SeatCount" class="form-control" required/>
                <span asp-validation-for="Carriage.SeatCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carriage.AvailableSeats" class="control-label"></label>
                <input asp-for="Carriage.AvailableSeats" class="form-control" required/>
                <span asp-validation-for="Carriage.AvailableSeats" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Carriage.HasAirConditioning" class="form-check-input" />
                <label asp-for="Carriage.HasAirConditioning" class="form-check-label"></label>
            </div>

            <div class="form-group form-check">
                <input asp-for="Carriage.HasWiFi" class="form-check-input" />
                <label asp-for="Carriage.HasWiFi" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-primary">Создать</button>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}