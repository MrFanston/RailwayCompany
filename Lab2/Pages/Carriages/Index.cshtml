@page
@model Lab2.Pages.Carriages.IndexModel
@{
    ViewData["Title"] = "Вагоны";
}

<h1 class="mb-4">Список вагонов</h1>

<p>
    <a asp-page="Create" class="btn btn-success mb-3">Добавить вагон</a>
</p>

<table class="table table-striped table-bordered align-middle shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Поезд</th>
            <th>№ Вагона</th>
            <th>Тип</th>
            <th>Всего мест</th>
            <th>Свободно</th>
            <th>Кондиционер</th>
            <th>Wi-Fi</th>
            <th class="text-center" style="width: 150px;">Действия</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Carriage != null && Model.Carriage.Any())
        {
            foreach (var item in Model.Carriage)
            {
                <tr>
                    <td>@item.Train?.Destination (@item.Train?.TrainNumber)</td>
                    <td>@item.CarriageNumber</td>
                    <td>@item.Type</td>
                    <td>@item.SeatCount</td>
                    <td>@item.AvailableSeats</td>
                    <td>@(item.HasAirConditioning ? "Да" : "Нет")</td>
                    <td>@(item.HasWiFi ? "Да" : "Нет")</td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">✏️</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">Нет данных о вагонах</td>
            </tr>
        }
    </tbody>
</table>
